{
  "extends": [
    "next/core-web-vitals",
    "plugin:prettier/recommended"
  ],
  "overrides": [
    {
      "files": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx"
      ],
      "rules": {
        "prettier/prettier": [
          "error",
          {
            "endOfLine": "crlf",
            "printWidth": 150,
            "semi": true,
            "singleQuote": true,
            "tabWidth": 2,
            "useTabs": false,
            "trailingComma": "es5",
            "bracketSpacing": true,
            "jsxSingleQuote": true
          },
          {
            "usePrettierrc": false
          }
        ]
      }
    }
  ]
}